{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@textbus/textbus": ["./src/public-api.ts"],
      "@textbus/component-library-plugin": ["../component-library-plugin/src/public-api.ts"],
      "@textbus/components": ["../components/src/public-api.ts"],
      "@textbus/contextmenu-plugin": ["../contextmenu-plugin/src/public-api.ts"],
      "@textbus/core": ["../core/src/public-api.ts"],
      "@textbus/device-toggle-plugin": ["../device-toggle-plugin/src/public-api.ts"],
      "@textbus/formatters": ["../formatters/src/public-api.ts"],
      "@textbus/full-screen-plugin": ["../full-screen-plugin/src/public-api.ts"],
      "@textbus/guard-end-block-plugin": ["../guard-end-block-plugin/src/public-api.ts"],
      "@textbus/image-adn-video-drag-resize-plugin": ["../image-adn-video-drag-resize-plugin/src/public-api.ts"],
      "@textbus/link-jump-tip-plugin": ["../link-jump-tip-plugin/src/public-api.ts"],
      "@textbus/outlines-plugin": ["../outlines-plugin/src/public-api.ts"],
      "@textbus/paste-upload-emitter-plugin": ["../paste-upload-emitter-plugin/src/public-api.ts"],
      "@textbus/sourcecode-mode-plugin": ["../sourcecode-mode-plugin/src/public-api.ts"],
      "@textbus/table-edit-enhance-plugin": ["../table-edit-enhance-plugin/src/public-api.ts"],
      "@textbus/toolbar": ["../toolbar/src/public-api.ts"],
      "@textbus/uikit": ["../uikit/src/public-api.ts"]
    },
    "jsx": "react",
    "jsxFactory": "VElement.createElement"
  },
  "exclude": ["packages"]
}
